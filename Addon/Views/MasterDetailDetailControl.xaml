<UserControl
    x:Class="Addon.Views.MasterDetailDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"    
    d:DesignWidth="600">

    <ScrollViewer       
        Name="ForegroundElement"
        VerticalScrollMode="Enabled"
        HorizontalAlignment="Stretch"
        Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
        Padding="{StaticResource DetailPageMargin}">
        <StackPanel HorizontalAlignment="Left"                    >
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                <FontIcon
                    FontSize="48"
                    Glyph=""
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
                <TextBlock
                    VerticalAlignment="Center"
                    Text="{x:Bind MasterMenuItem.FolderName, Mode=OneWay}"
                    Style="{ThemeResource TitleTextBlockStyle}"/>
            </StackPanel>
            <!-- {AbsolutePath}, {Title},\{ProjectUrl}, {PreferredReleaseType}Version},
             {CurrentReleaseTypeAndVersion} {IsIgnored}, {GameVersion}, {Status},\r {CurrentDownload}
             {SuggestedDownload}";-->

            <StackPanel Name="block" Padding="0,8,0,0">

                <VariableSizedWrapGrid Orientation="Horizontal">
                    <StackPanel Width="200">
                        <TextBlock Text="Title" Style="{StaticResource DetailSubTitleStyle}"/>
                        <TextBlock  Text="{x:Bind MasterMenuItem.Title, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
                    </StackPanel>
                    <StackPanel Width="Auto"  >
                        <TextBlock  Text="Status" Style="{StaticResource DetailSubTitleStyle}" />
                        <TextBlock  Text="{x:Bind MasterMenuItem.Status, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
                    </StackPanel>
                </VariableSizedWrapGrid>
                
                <VariableSizedWrapGrid Orientation="Horizontal">
                    <StackPanel Width="200">
                        <TextBlock  Text="Preffered Release Type" Style="{StaticResource DetailSubTitleStyle}" />
                        <TextBlock  Text="{x:Bind MasterMenuItem.PreferredReleaseType, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
                    </StackPanel>
                    <StackPanel Width="Auto">
                        <TextBlock  Text="Version" Style="{StaticResource DetailSubTitleStyle}" />
                        <TextBlock  Text="{x:Bind MasterMenuItem.Version, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
                    </StackPanel>
                </VariableSizedWrapGrid>


                <TextBlock  Text="Current Release Type And Version" Style="{StaticResource DetailSubTitleStyle}" />
                <TextBlock  Text="{x:Bind MasterMenuItem.CurrentReleaseTypeAndVersion, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
                <TextBlock  Text="Game Version" Style="{StaticResource DetailSubTitleStyle}"/>
                <TextBlock  Text="{x:Bind MasterMenuItem.GameVersion, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />
                <TextBlock  Text="Absolute Path" Style="{StaticResource DetailSubTitleStyle}" />
                <TextBlock  Text="{x:Bind MasterMenuItem.AbsolutePath, Mode=OneWay}" Style="{StaticResource DetailBodyBaseMediumStyle}" />

                <TextBlock Text="Change Log" Style="{StaticResource DetailSubTitleStyle}" Margin="{StaticResource SmallTopMargin}" />
                <TextBlock Style="{StaticResource DetailBodyStyle}" Text="commit be966f74369dc95891c6f9d26d5dd205c26f482b
