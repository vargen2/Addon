<Page
    x:Class="Addon.Views.BrowsePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="using:Addon.Core.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">
    <Grid x:Name="ContentArea" Margin="{StaticResource MediumLeftRightMargin}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <AutoSuggestBox
            Margin="{StaticResource SmallTopBottomMargin}"
            HorizontalAlignment="Stretch"
            PlaceholderText="Search"
            TextChanged="AutoSuggestBox_OnTextChanged" />
        <ListView
            x:Name="ListView"
            Grid.Row="1"
            ItemsSource="{x:Bind ViewModel.Session.StoreAddons, Mode=OneWay}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectionMode="Single">
            <ListView.HeaderTemplate>
                <DataTemplate>
                    <StackPanel
                        Height="25"
                        Margin="{StaticResource SmallBottomMargin}"
                        Padding="{StaticResource SmallLeftMargin}"
                        Orientation="Horizontal">
                        <TextBlock
                            Width="200"
                            FontSize="{StaticResource MediumFontSize}"
                            Text="Title" />
                        <TextBlock
                            Width="400"
                            FontSize="{StaticResource MediumFontSize}"
                            Text="Description" />
                        <TextBlock
                            Width="120"
                            FontSize="{StaticResource MediumFontSize}"
                            Text="Downloads" />
                        <TextBlock
                            Width="120"
                            FontSize="{StaticResource MediumFontSize}"
                            Text="Install" />
                        <TextBlock
                            Width="120"
                            FontSize="{StaticResource MediumFontSize}"
                            Text="Updated" />
                        <TextBlock
                            Width="120"
                            FontSize="{StaticResource MediumFontSize}"
                            Text="Created" />
                    </StackPanel>
                </DataTemplate>
            </ListView.HeaderTemplate>

            <ListView.ItemTemplate>
                <DataTemplate x:DataType="data:StoreAddon">
                    <StackPanel Height="60" Orientation="Horizontal">
                        <StackPanel Width="200">
                            <TextBlock
                                Height="30"
                                Margin="0,15,0,15"
                                FontSize="{StaticResource MediumFontSize}"
                                Text="{x:Bind Title}" />
                        </StackPanel>
                        <StackPanel Width="400">
                            <TextBlock
                                Height="60"
                                Margin="{StaticResource SmallRightMargin}"
                                Text="{x:Bind Description}"
                                TextWrapping="Wrap" />
                        </StackPanel>
                        <StackPanel Width="120">
                            <TextBlock
                                Height="30"
                                Margin="0,15,0,15"
                                Text="{x:Bind NrOfDownloads}" />
                        </StackPanel>
                        <StackPanel Width="120">
                            <Button
                                Margin="0,14,0,14"
                                Content="Install"
                                Tag=""
                                Visibility="Visible" />
                            <TextBlock
                                Height="30"
                                Margin="0,15,0,15"
                                Text=""
                                Visibility="Collapsed" />
                        </StackPanel>
                        <StackPanel Width="120">
                            <TextBlock
                                Height="30"
                                Margin="0,15,0,15"
                                Text="{x:Bind UpdatedFormated}" />
                        </StackPanel>
                        <StackPanel Width="120">
                            <TextBlock
                                Height="30"
                                Margin="0,15,0,15"
                                Text="{x:Bind CreatedFormated}" />
                        </StackPanel>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </Grid>
</Page>
